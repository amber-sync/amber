{
  "name": "amber",
  "private": true,
  "version": "0.0.1-beta",
  "type": "module",
  "author": "Florian P. Mahner",
  "description": "A modern, reliable rsync backup tool for macOS.",
  "license": "MIT",
  "homepage": "https://github.com/florianmahner/amber-sync",
  "repository": {
    "type": "git",
    "url": "https://github.com/florianmahner/amber-sync.git"
  },
  "bugs": {
    "url": "https://github.com/florianmahner/amber-sync/issues"
  },
  "keywords": [
    "backup",
    "rsync",
    "time machine",
    "macos",
    "tauri"
  ],
  "scripts": {
    "dev": "tauri dev",
    "dev:mcp": "tauri dev --features mcp",
    "dev:frontend": "vite",
    "build": "tauri build",
    "build:frontend": "vite build",
    "build:icons": "node scripts/build-icons.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:rust": "cd src-tauri && cargo test",
    "bench": "cd src-tauri && cargo bench",
    "bench:rust": "cd src-tauri && cargo bench",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "analyze": "ANALYZE=true vite build",
    "prepare": "husky"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-dialog": "^2.2.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-window": "^2.2.3",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tauri-apps/cli": "^2.9.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-window": "^2.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  }
}
