{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["mocha", "chai", "node"],
    "baseUrl": ".",
    "allowJs": true
  },
  "include": ["tests/**/*.ts", "tests/**/*.js", "electron/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true,
    "transpileOnly": true
  }
}
